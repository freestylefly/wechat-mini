/* 首页样式 */
.container {
  height: 100vh;
  padding: 0;
}

.chinese-bg {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.home-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.home-title {
  font-size: 72rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.8);
}

.home-subtitle {
  font-size: 36rpx;
  text-align: center;
  color: #333;
  margin-bottom: 160rpx;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.8);
} 