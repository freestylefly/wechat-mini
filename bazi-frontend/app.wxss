/**
 * 全局样式文件
 */

/* 重置样式 */
page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
  font-size: 14px;
  color: #333;
  height: 100%;
  background-color: #f9f9f9;
}

/* 通用背景 */
.chinese-bg {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}

/* 容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  padding: 30rpx;
}

/* 文字样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.8);
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.8);
}

/* 按钮样式 */
.action-btn {
  width: 80%;
  height: 88rpx;
  background-color: #3CB371;
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4px 10px rgba(60, 179, 113, 0.3);
  margin: 60rpx auto;
}

/* 禁用按钮 */
.action-btn.disabled {
  background-color: #b0b0b0;
  box-shadow: none;
} 